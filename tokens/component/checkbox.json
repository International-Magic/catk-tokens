{
  "component": {
    "checkbox": {
      "color": {
        "bg": {
          "default": {
            "value": "red",
            "type": "color"
          }
        },
        "border": {
          "default": {
            "value": "red",
            "type": "color"
          }
        },
        "fg": {
          "default": {
            "value": "red",
            "type": "color"
          }
        }
      },
      "fontSize": {
        "icon": {
          "sm": {
            "value": "{component.checkbox.dimension.icon.height.sm}",
            "type": "fontSizes"
          },
          "md": {
            "value": "{component.checkbox.dimension.check.height.md}",
            "type": "fontSizes"
          },
          "lg": {
            "value": "{component.checkbox.dimension.icon.height.lg}",
            "type": "fontSizes"
          }
        }
      },
      "dimension": {
        "box": {
          "height": {
            "sm": {
              "value": "{component.checkbox.dimension.box.height.md} - {component.checkbox.config.box.step}",
              "type": "dimension"
            },
            "md": {
              "value": "{component.checkbox.config.box.height}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.checkbox.dimension.box.height.md} + {component.checkbox.config.box.step}",
              "type": "dimension"
            }
          }
        },
        "check": {
          "height": {
            "md": {
              "value": "{component.checkbox.dimension.box.height.lg} * {component.checkbox.config.mark.scale}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.checkbox.dimension.box.height.lg} * {component.checkbox.config.mark.scale}",
              "type": "dimension"
            },
            "sm": {
              "value": "{component.checkbox.dimension.box.height.sm} * {component.checkbox.config.mark.scale}",
              "type": "dimension"
            }
          }
        }
      },
      "config": {
        "box": {
          "height": {
            "value": "{app.dimension.control.height.md} / 3",
            "type": "other"
          },
          "step": {
            "value": "0.5rem",
            "type": "other"
          }
        },
        "mark": {
          "scale": {
            "value": "0.5",
            "type": "other"
          },
          "step": {
            "value": "0.5rem",
            "type": "other"
          }
        }
      }
    }
  }
}