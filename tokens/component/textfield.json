{
  "component": {
    "textfield": {
      "sizing": {
        "height": {
          "sm": {
            "type": "sizing",
            "value": "{component.textfield.sizing.height.default} - {theme.config.scale.control.sizing}"
          },
          "default": {
            "type": "sizing",
            "value": "{theme.sizing.control.md} + {theme.config.scale.control.sizing}"
          },
          "lg": {
            "type": "sizing",
            "value": "{component.textfield.sizing.height.default} + {theme.config.scale.control.sizing}"
          }
        },
        "symbol": {
          "sm": {
            "type": "sizing",
            "value": "{component.textfield.sizing.symbol.default} - {theme.config.scale.step.2xs}"
          },
          "default": {
            "type": "sizing",
            "value": "{theme.font-size.symbol.lg}"
          },
          "lg": {
            "type": "sizing",
            "value": "{component.textfield.sizing.symbol.default} + {theme.config.scale.step.2xs}"
          }
        }
      },
      "border-radius": {
        "sm": {
          "type": "borderRadius",
          "value": "{theme.border-radius.control.md} - {theme.config.scale.step.2xs}"
        },
        "default": {
          "type": "borderRadius",
          "value": "{component.button.border-radius.default} + {theme.config.scale.control.border-radius}"
        },
        "lg": {
          "type": "borderRadius",
          "value": "{component.button.border-radius.lg} + {theme.config.scale.control.border-radius}"
        }
      },
      "spacing": {
        "padding": {
          "sm": {
            "type": "spacing",
            "value": "({component.textfield.sizing.height.sm} - {component.textfield.sizing.symbol.sm}) / 2"
          },
          "default": {
            "type": "spacing",
            "value": "({component.textfield.sizing.height.default} - {component.textfield.sizing.symbol.default}) / 2"
          },
          "lg": {
            "type": "spacing",
            "value": "({component.textfield.sizing.height.lg} - {component.textfield.sizing.symbol.lg}) / 2"
          }
        },
        "gap": {
          "sm": {
            "type": "spacing",
            "value": "{component.textfield.spacing.padding.sm} - {theme.config.scale.step.sm}"
          },
          "default": {
            "type": "spacing",
            "value": "{component.textfield.spacing.padding.default} - {theme.config.scale.step.sm}"
          },
          "lg": {
            "type": "spacing",
            "value": "{component.textfield.spacing.padding.lg} - {theme.config.scale.step.sm}"
          }
        },
        "text": {
          "padding": {
            "default": {
              "value": "4px",
              "type": "spacing"
            }
          },
          "gap": {
            "sm": {
              "value": "0px",
              "type": "spacing"
            },
            "default": {
              "value": "1px",
              "type": "spacing"
            },
            "lg": {
              "value": "2px",
              "type": "spacing"
            }
          }
        }
      },
      "border-width": {
        "default": {
          "value": "{theme.border-width.control.sm}",
          "type": "borderWidth"
        }
      },
      "typography": {
        "input": {
          "sm": {
            "type": "typography",
            "value": "{theme.typography.control.productive.text.sm}"
          },
          "default": {
            "type": "typography",
            "value": "{theme.typography.control.productive.text.md}"
          },
          "lg": {
            "type": "typography",
            "value": "{theme.typography.control.productive.text.lg}"
          }
        },
        "label": {
          "default": {
            "type": "typography",
            "value": "{theme.typography.control.strong.text.2xs}"
          }
        },
        "symbol": {
          "sm": {
            "type": "typography",
            "value": "{theme.typography.control.productive.symbol.md}"
          },
          "default": {
            "type": "typography",
            "value": "{theme.typography.control.productive.symbol.lg}"
          },
          "lg": {
            "type": "typography",
            "value": "{theme.typography.control.productive.symbol.xl}"
          }
        }
      },
      "color": {
        "fg": {
          "value": "{theme.color.control.inactive.fg.default}",
          "type": "color"
        },
        "disabled": {
          "bg": {
            "value": "{theme.color.control.disabled.bg.subtle.default}",
            "type": "color"
          },
          "border": {
            "value": "{theme.color.control.disabled.bg.muted.default}",
            "type": "color"
          },
          "fg": {
            "value": "{theme.color.control.disabled.fg.on-bg}",
            "type": "color"
          }
        },
        "solid": {
          "bg": {
            "value": "{theme.color.control.inactive.bg.subtle.default}",
            "type": "color"
          }
        },
        "outline": {
          "border": {
            "value": "{theme.color.control.inactive.fg.muted.default}",
            "type": "color"
          }
        },
        "focus": {
          "border": {
            "value": "{theme.color.control.focus.border.active}",
            "type": "color"
          },
          "ring": {
            "value": "{theme.color.control.focus.ring.default}",
            "type": "color"
          }
        },
        "filled": {
          "fg": {
            "value": "{theme.color.surface.fg.default}",
            "type": "color"
          }
        },
        "error": {
          "bg": {
            "value": "{theme.color.control.danger.bg.subtle}",
            "type": "color"
          },
          "border": {
            "value": "{theme.color.control.danger.bg.default}",
            "type": "color"
          },
          "fg": {
            "value": "{theme.color.control.danger.fg.default}",
            "type": "color"
          }
        }
      },
      "focus-ring": {
        "default": {
          "value": "{theme.focus-ring.control.default}",
          "type": "borderWidth"
        }
      }
    }
  }
}