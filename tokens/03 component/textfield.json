{
  "component": {
    "textfield": {
      "sizing": {
        "height": {
          "sm": {
            "type": "sizing",
            "value": "{component.button.sizing.height.default} - {theme.config.scale.control.sizing}"
          },
          "default": {
            "type": "sizing",
            "value": "{theme.sizing.control.md}"
          },
          "lg": {
            "type": "sizing",
            "value": "{component.button.sizing.height.default} + {theme.config.scale.control.sizing}"
          }
        }
      },
      "border-radius": {
        "sm": {
          "type": "borderRadius",
          "value": "{component.button.border-radius.default} - {theme.config.scale.control.border-radius}"
        },
        "default": {
          "type": "borderRadius",
          "value": "{theme.border-radius.control.md} - {theme.config.scale.step.2xs}"
        },
        "lg": {
          "type": "borderRadius",
          "value": "{component.button.border-radius.default} + {theme.config.scale.control.border-radius}"
        },
        "xl": {
          "type": "borderRadius",
          "value": "{component.button.border-radius.lg} + {theme.config.scale.control.border-radius}"
        },
        "rounded": {
          "value": "{theme.border-radius.control.rounded}",
          "type": "borderRadius"
        }
      },
      "spacing": {
        "padding": {
          "sm": {
            "type": "spacing",
            "value": "{component.textfield.sizing.height.sm} / 4"
          },
          "default": {
            "type": "spacing",
            "value": "{component.textfield.sizing.height.default} / 4"
          },
          "lg": {
            "type": "spacing",
            "value": "{component.textfield.sizing.height.lg} / 4"
          }
        },
        "gap": {
          "sm": {
            "type": "spacing",
            "value": "{component.textfield.spacing.padding.sm} - {theme.config.scale.step.2xs}"
          },
          "default": {
            "type": "spacing",
            "value": "{component.textfield.spacing.padding.default} - {theme.config.scale.step.2xs}"
          },
          "lg": {
            "type": "spacing",
            "value": "{component.textfield.spacing.padding.lg} - {theme.config.scale.step.2xs}"
          }
        },
        "text": {
          "padding": {
            "default": {
              "value": "2px",
              "type": "spacing"
            }
          },
          "gap": {
            "sm": {
              "value": "2px - {component.textfield.spacing.text.gap.default}",
              "type": "spacing"
            },
            "default": {
              "value": "2px",
              "type": "spacing"
            },
            "lg": {
              "value": "2px + {component.textfield.spacing.text.gap.default}",
              "type": "spacing"
            }
          }
        }
      },
      "border-width": {
        "default": {
          "value": "{theme.border-width.control.sm}",
          "type": "borderWidth"
        }
      },
      "typography": {
        "input": {
          "sm": {
            "type": "typography",
            "value": "{theme.typography.control.productive.text.sm}"
          },
          "default": {
            "type": "typography",
            "value": "{theme.typography.control.productive.text.md}"
          },
          "lg": {
            "type": "typography",
            "value": "{theme.typography.control.productive.text.lg}"
          }
        },
        "label": {
          "default": {
            "type": "typography",
            "value": "{theme.typography.control.strong.text.2xs}"
          }
        },
        "symbol": {
          "sm": {
            "type": "typography",
            "value": "{theme.typography.control.productive.symbol.md}"
          },
          "default": {
            "type": "typography",
            "value": "{theme.typography.control.productive.symbol.lg}"
          },
          "lg": {
            "type": "typography",
            "value": "{theme.typography.control.productive.symbol.xl}"
          }
        }
      },
      "color": {
        "default": {
          "border": {
            "value": "{theme.color.control.inactive.bg.muted}",
            "type": "color"
          },
          "bg": {
            "value": "{theme.color.control.inactive.bg.subtle}",
            "type": "color"
          },
          "fg": {
            "value": "{theme.color.control.inactive.fg.default}",
            "type": "color"
          }
        },
        "focus": {
          "border": {
            "value": "hsl({theme.config.color.chroma.accent}, {theme.config.color.lightness.60})",
            "type": "color"
          },
          "focus-ring": {
            "value": "{component.button.color.accent.light.hover.bg}",
            "type": "color"
          }
        },
        "filled": {
          "fg": {
            "value": "{theme.color.surface.fg.default}",
            "type": "color"
          }
        },
        "danger": {
          "bg": {
            "value": "{theme.color.control.danger.bg.normal.subtle}",
            "type": "color"
          },
          "border": {
            "value": "{theme.color.control.danger.bg.normal.default}",
            "type": "color"
          },
          "fg": {
            "value": "{theme.color.control.danger.fg.default}",
            "type": "color"
          }
        }
      },
      "focus-ring": {
        "default": {
          "value": "{theme.focus-ring.control.lg}",
          "type": "borderWidth"
        }
      }
    }
  }
}