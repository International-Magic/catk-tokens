{
  "component": {
    "input": {
      "sizing": {
        "base": {
          "value": "{theme.sizing.base}",
          "type": "sizing"
        },
        "height": {
          "xs": {
            "type": "sizing",
            "value": "{component.input.sizing.base} * 1.5"
          },
          "sm": {
            "type": "sizing",
            "value": "{component.input.sizing.base} * 2"
          },
          "md": {
            "type": "sizing",
            "value": "{component.input.sizing.base} * 2.5"
          },
          "lg": {
            "type": "sizing",
            "value": "{component.input.sizing.base} * 3"
          },
          "xl": {
            "type": "sizing",
            "value": "{component.input.sizing.base} * 3"
          }
        }
      },
      "color": {
        "primary": {
          "default": {
            "bg": {
              "type": "color",
              "value": "{theme.color.control.primary.bg.default}"
            },
            "fg": {
              "type": "color",
              "value": "{theme.color.control.primary.fg.on-primary}"
            }
          },
          "hover": {
            "bg": {
              "type": "color",
              "value": "{theme.color.control.primary.bg.hover}"
            }
          },
          "active": {
            "bg": {
              "type": "color",
              "value": "{theme.color.control.primary.bg.active}"
            }
          },
          "focus": {
            "bg": {
              "type": "color",
              "value": "{theme.color.control.primary.bg.active}"
            }
          },
          "disabled": {
            "bg": {
              "type": "color",
              "value": "{theme.color.control.disabled.bg.default}"
            },
            "fg": {
              "type": "color",
              "value": "{theme.color.control.disabled.fg.default}"
            }
          }
        }
      },
      "border-radius": {
        "full": {
          "value": "{core.border-radius.full}",
          "type": "borderRadius"
        },
        "xs": {
          "type": "borderRadius",
          "value": "{component.input.sizing.height.xs} / 4"
        },
        "sm": {
          "type": "borderRadius",
          "value": "{component.input.sizing.height.sm} / 4"
        },
        "md": {
          "type": "borderRadius",
          "value": "{component.input.sizing.height.md} / 4"
        },
        "lg": {
          "type": "borderRadius",
          "value": "{component.input.sizing.height.lg} / 4"
        }
      },
      "spacing": {
        "padding": {
          "xs": {
            "type": "spacing",
            "value": "{component.input.sizing.base} * 0.5"
          },
          "sm": {
            "type": "spacing",
            "value": "{component.input.sizing.base} * 0.75"
          },
          "md": {
            "type": "spacing",
            "value": "{component.input.sizing.base}"
          },
          "lg": {
            "type": "spacing",
            "value": "{component.input.sizing.base} * 1.25"
          }
        },
        "gap": {
          "xs": {
            "type": "spacing",
            "value": "{component.input.spacing.padding.xs} / 2"
          },
          "sm": {
            "type": "spacing",
            "value": "{component.input.spacing.padding.sm} / 2"
          },
          "md": {
            "type": "spacing",
            "value": "{component.input.spacing.padding.md} / 2"
          },
          "lg": {
            "type": "spacing",
            "value": "{component.input.spacing.padding.lg} / 2"
          }
        }
      }
    }
  }
}