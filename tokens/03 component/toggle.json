{
  "component": {
    "toggle": {
      "sizing": {
        "base": {
          "default": {
            "value": "{core.sizing.base}",
            "type": "sizing"
          },
          "inset": {
            "value": "{component.toggle.sizing.base.default} * 0.25",
            "type": "sizing"
          }
        },
        "knob": {
          "default": {
            "sm": {
              "value": "{component.toggle.sizing.base.default}",
              "type": "sizing"
            },
            "md": {
              "value": "{component.toggle.sizing.knob.default.sm} + {component.toggle.sizing.base.inset}",
              "type": "sizing"
            },
            "lg": {
              "value": "{component.toggle.sizing.knob.default.md} + {component.toggle.sizing.base.inset}",
              "type": "sizing"
            }
          },
          "pressed": {
            "sm": {
              "value": "{component.toggle.sizing.knob.default.sm} * 1.25",
              "type": "sizing"
            },
            "md": {
              "value": "{component.toggle.sizing.knob.default.md} * 1.25",
              "type": "sizing"
            },
            "lg": {
              "value": "{component.toggle.sizing.knob.default.lg} * 1.25",
              "type": "sizing"
            }
          }
        },
        "frame": {
          "width": {
            "sm": {
              "value": "{component.toggle.sizing.knob.default.sm} * 2 + {component.toggle.sizing.base.inset}",
              "type": "sizing"
            },
            "md": {
              "value": "{component.toggle.sizing.knob.default.md} * 2 + {component.toggle.sizing.base.inset}",
              "type": "sizing"
            },
            "lg": {
              "value": "{component.toggle.sizing.knob.default.lg} * 2 + {component.toggle.sizing.base.inset}",
              "type": "sizing"
            }
          }
        }
      },
      "color": {
        "bg": {
          "active": {
            "type": "color",
            "value": "{theme.color.control.accent.bg.normal.default}"
          },
          "inactive": {
            "type": "color",
            "value": "{theme.color.control.inactive.bg.default}"
          }
        },
        "fg": {
          "default": {
            "type": "color",
            "value": "{theme.color.control.accent.fg.on-normal}"
          },
          "disabled": {
            "type": "color",
            "value": "{theme.color.control.disabled.fg.on-bg-muted}"
          }
        }
      },
      "box-shadow": {
        "knob": {
          "type": "boxShadow",
          "value": "{theme.box-shadow.drop-shadow.control.xs}"
        }
      },
      "spacing": {
        "padding": {
          "value": "2px",
          "type": "spacing"
        }
      }
    }
  }
}