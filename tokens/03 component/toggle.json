{
  "component": {
    "toggle": {
      "sizing": {
        "handle": {
          "default": {
            "default": {
              "value": "{theme.sizing.control.xs}",
              "type": "sizing"
            },
            "sm": {
              "value": "{component.toggle.sizing.handle.default.default} - {theme.config.scale.step.xs}",
              "type": "sizing"
            },
            "lg": {
              "value": "{component.toggle.sizing.handle.default.default} + {theme.config.scale.step.xs}",
              "type": "sizing"
            }
          },
          "pressed": {
            "default": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.default} * {core.scale.ratio.major-third}"
            },
            "sm": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.sm} * {core.scale.ratio.major-third}"
            },
            "lg": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.lg} * {core.scale.ratio.major-third}"
            }
          }
        },
        "track": {
          "width": {
            "default": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.default} * 2 + {component.toggle.spacing.default}"
            },
            "sm": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.sm} * 2 + {component.toggle.spacing.default}"
            },
            "lg": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.lg} * 2 + {component.toggle.spacing.default}"
            }
          }
        }
      },
      "color": {
        "bg": {
          "active": {
            "type": "color",
            "value": "{theme.color.control.accent.bg.normal.default}"
          },
          "inactive": {
            "type": "color",
            "value": "{theme.color.control.inactive.bg.default}"
          },
          "disabled": {
            "type": "color",
            "value": "{theme.color.control.disabled.bg.default}"
          }
        },
        "fg": {
          "default": {
            "type": "color",
            "value": "{theme.color.control.accent.fg.on-normal}"
          },
          "disabled-active": {
            "type": "color",
            "value": "{theme.color.palette.blue.30}"
          },
          "disabled-inactive": {
            "type": "color",
            "value": "{theme.color.palette.grey.20}"
          }
        }
      },
      "box-shadow": {
        "handle": {
          "type": "boxShadow",
          "value": "{theme.box-shadow.control.light.3xs}"
        }
      },
      "spacing": {
        "default": {
          "value": "{theme.config.scale.step.2xs}",
          "type": "spacing"
        }
      }
    },
    "border-radius": {
      "handle": {
        "default": {
          "value": "{theme.border-radius.control.rounded}",
          "type": "borderRadius"
        },
        "sm": {
          "value": "{component.border-radius.handle.default} - {theme.config.scale.step.2xs}",
          "type": "borderRadius"
        },
        "lg": {
          "value": "{component.border-radius.handle.default} + {theme.config.scale.step.2xs}",
          "type": "borderRadius"
        }
      },
      "track": {
        "default": {
          "value": "{component.border-radius.handle.default} + {theme.config.scale.control.border-radius}",
          "type": "borderRadius"
        },
        "sm": {
          "value": "{component.border-radius.handle.sm} + {theme.config.scale.step.2xs}",
          "type": "borderRadius"
        },
        "lg": {
          "value": "{component.border-radius.handle.lg} + {theme.config.scale.step.2xs}",
          "type": "borderRadius"
        }
      }
    }
  }
}