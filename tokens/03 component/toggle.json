{
  "component": {
    "toggle": {
      "sizing": {
        "handle": {
          "default": {
            "sm": {
              "value": "{component.toggle.sizing.handle.default.default} - {theme.config.scale.step.xs}",
              "type": "sizing"
            },
            "default": {
              "value": "{theme.sizing.control.xs}",
              "type": "sizing"
            },
            "lg": {
              "value": "{component.toggle.sizing.handle.default.default} + {theme.config.scale.step.xs}",
              "type": "sizing"
            }
          },
          "pressed": {
            "sm": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.sm} * {theme.config.scale.ratio.md}"
            },
            "default": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.default} * {theme.config.scale.ratio.md}"
            },
            "lg": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.lg} * {theme.config.scale.ratio.md}"
            }
          }
        },
        "track": {
          "width": {
            "sm": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.sm} * 2 + {component.toggle.spacing.default}"
            },
            "default": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.default} * 2 + {component.toggle.spacing.default}"
            },
            "lg": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.lg} * 2 + {component.toggle.spacing.default}"
            }
          }
        }
      },
      "color": {
        "bg": {
          "active": {
            "type": "color",
            "value": "{theme.color.control.accent.bg.normal.default}"
          },
          "inactive": {
            "type": "color",
            "value": "{theme.color.control.inactive.bg.default}"
          },
          "disabled": {
            "type": "color",
            "value": "{theme.color.control.disabled.bg.default}"
          }
        },
        "fg": {
          "default": {
            "type": "color",
            "value": "{theme.color.control.accent.fg.on-normal}"
          },
          "disabled-active": {
            "type": "color",
            "value": "{theme.color.palette.blue.30}"
          },
          "disabled-inactive": {
            "type": "color",
            "value": "{theme.color.palette.neutral.10}"
          }
        }
      },
      "box-shadow": {
        "handle": {
          "type": "boxShadow",
          "value": "{theme.box-shadow.control.strong.3xs}"
        }
      },
      "spacing": {
        "default": {
          "value": "{theme.config.scale.step.2xs}",
          "type": "spacing"
        }
      },
      "border-radius": {
        "handle": {
          "sm": {
            "value": "{component.toggle.border-radius.handle.default} - {theme.config.scale.step.2xs}",
            "type": "borderRadius"
          },
          "default": {
            "value": "{theme.border-radius.control.rounded}",
            "type": "borderRadius"
          },
          "lg": {
            "value": "{component.toggle.border-radius.handle.default} + {theme.config.scale.step.2xs}",
            "type": "borderRadius"
          }
        },
        "track": {
          "sm": {
            "value": "{component.toggle.border-radius.handle.sm} + {theme.config.scale.step.2xs}",
            "type": "borderRadius"
          },
          "default": {
            "value": "{component.toggle.border-radius.handle.default} + {theme.config.scale.control.border-radius}",
            "type": "borderRadius"
          },
          "lg": {
            "value": "{component.toggle.border-radius.handle.lg} + {theme.config.scale.step.2xs}",
            "type": "borderRadius"
          }
        }
      }
    }
  }
}