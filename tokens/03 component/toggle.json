{
  "component": {
    "toggle": {
      "sizing": {
        "handle": {
          "default": {
            "sm": {
              "value": "{component.toggle.sizing.handle.default.md} - {theme.config.scale.handle.sizing}",
              "type": "sizing"
            },
            "md": {
              "value": "{theme.sizing.handle.md}",
              "type": "sizing"
            },
            "lg": {
              "value": "{component.toggle.sizing.handle.default.md} + {theme.config.scale.handle.sizing}",
              "type": "sizing"
            }
          },
          "pressed": {
            "sm": {
              "value": "{component.toggle.sizing.handle.default.sm} * {core.scale.ratio.major-third}",
              "type": "sizing"
            },
            "md": {
              "value": "{component.toggle.sizing.handle.default.md} * {core.scale.ratio.major-third}",
              "type": "sizing"
            },
            "lg": {
              "value": "{component.toggle.sizing.handle.default.lg} * {core.scale.ratio.major-third}",
              "type": "sizing"
            }
          }
        },
        "frame": {
          "width": {
            "sm": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.sm} * 2 + {theme.config.scale.handle.sizing}"
            },
            "md": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.md} * 2 + {theme.config.scale.handle.sizing}"
            },
            "lg": {
              "type": "sizing",
              "value": "{component.toggle.sizing.handle.default.lg} * 2 + {theme.config.scale.handle.sizing}"
            }
          }
        }
      },
      "color": {
        "bg": {
          "active": {
            "type": "color",
            "value": "{theme.color.control.accent.bg.normal.default}"
          },
          "inactive": {
            "type": "color",
            "value": "{theme.color.control.inactive.bg.default}"
          },
          "disabled": {
            "type": "color",
            "value": "{theme.color.control.disabled.bg.default}"
          }
        },
        "fg": {
          "default": {
            "type": "color",
            "value": "{theme.color.control.accent.fg.on-normal}"
          },
          "disabled-active": {
            "type": "color",
            "value": "{theme.color.palette.blue.30}"
          },
          "disabled-inactive": {
            "type": "color",
            "value": "{theme.color.palette.grey.20}"
          }
        }
      },
      "box-shadow": {
        "handle": {
          "type": "boxShadow",
          "value": "{theme.box-shadow.control.handle}"
        }
      },
      "spacing": {
        "default": {
          "value": "2px",
          "type": "spacing"
        }
      }
    }
  }
}