{
  "component": {
    "button": {
      "sizing": {
        "height": {
          "base": {
            "value": "{core.sizing.base}",
            "type": "sizing"
          },
          "sm": {
            "type": "sizing",
            "value": "{component.button.sizing.height.base} * 2"
          },
          "md": {
            "type": "sizing",
            "value": "{component.button.sizing.height.base} * 2.5"
          },
          "lg": {
            "type": "sizing",
            "value": "{component.button.sizing.height.base} * 3"
          }
        }
      },
      "color": {
        "primary": {
          "default": {
            "bg": {
              "type": "color",
              "value": "{theme.color.primary.bg.default}"
            },
            "fg": {
              "type": "color",
              "value": "{theme.color.primary.fg.on-primary}"
            }
          },
          "hover": {
            "bg": {
              "type": "color",
              "value": "{theme.color.primary.bg.hover}"
            }
          },
          "active": {
            "bg": {
              "type": "color",
              "value": "{theme.color.primary.bg.active}"
            }
          },
          "focus": {
            "bg": {
              "type": "color",
              "value": "{theme.color.primary.bg.focus}"
            }
          },
          "disabled": {
            "bg": {
              "type": "color",
              "value": "rgba({core.color.grey.100},{core.transparency.10})"
            },
            "bg-on-emphasis": {
              "type": "color",
              "value": "rgba({core.color.grey.10},{core.transparency.10})"
            }
          }
        }
      },
      "border-radius": {
        "full": {
          "value": "{core.border-radius.full}",
          "type": "borderRadius"
        },
        "sm": {
          "type": "borderRadius",
          "value": "{component.button.sizing.height.sm} / 4"
        },
        "md": {
          "type": "borderRadius",
          "value": "{component.button.sizing.height.md} / 4"
        },
        "lg": {
          "type": "borderRadius",
          "value": "{component.button.sizing.height.lg} / 4"
        }
      },
      "spacing": {
        "padding": {
          "sm": {
            "value": "{component.button.sizing.height.base} * 0.75",
            "type": "spacing"
          },
          "md": {
            "value": "{component.button.sizing.height.base}",
            "type": "spacing"
          },
          "lg": {
            "value": "{component.button.sizing.height.base} * 1.25",
            "type": "spacing"
          }
        },
        "gap": {
          "sm": {
            "value": "{component.button.sizing.height.base} * 0.25",
            "type": "spacing"
          },
          "md": {
            "value": "{component.button.sizing.height.base} * 0.5",
            "type": "spacing"
          }
        }
      }
    }
  }
}