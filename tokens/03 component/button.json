{
  "button": {
    "height": {
      "base": {
        "value": "{core.sizing.base}",
        "type": "sizing"
      },
      "sm": {
        "value": "{button.height.base} * 1.5",
        "type": "sizing"
      },
      "md": {
        "value": "{button.height.base} * 2",
        "type": "sizing"
      },
      "lg": {
        "value": "{button.height.base} * 2.5",
        "type": "sizing"
      },
      "xl": {
        "value": "{button.height.base} * 3",
        "type": "sizing"
      }
    },
    "color": {
      "primary": {
        "default": {
          "bg": {
            "value": "{semantic.accent.default}",
            "type": "color"
          }
        },
        "hover": {
          "bg": {
            "value": "{semantic.accent.default}",
            "type": "color"
          }
        },
        "active": {
          "bg": {
            "value": "{semantic.accent.default}",
            "type": "color"
          }
        },
        "focus": {
          "bg": {
            "value": "{semantic.accent.default}",
            "type": "color"
          }
        }
      }
    }
  }
}