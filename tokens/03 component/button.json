{
  "component": {
    "button": {
      "height": {
        "base": {
          "value": "{core.sizing.base}",
          "type": "sizing"
        },
        "sm": {
          "type": "sizing",
          "value": "{component.button.height.base} * 1.5"
        },
        "md": {
          "type": "sizing",
          "value": "{component.button.height.base} * 2"
        },
        "lg": {
          "type": "sizing",
          "value": "{component.button.height.base} * 2.5"
        },
        "xl": {
          "type": "sizing",
          "value": "{component.button.height.base} * 3"
        }
      }
    },
    "color": {
      "primary": {
        "default": {
          "bg": {
            "type": "color",
            "value": "{theme.color.primary.bg.default}"
          },
          "fg": {
            "type": "color",
            "value": "{theme.color.primary.fg.on-primary}"
          }
        },
        "hover": {
          "bg": {
            "type": "color",
            "value": "{theme.color.primary.bg.hover}"
          }
        },
        "active": {
          "bg": {
            "type": "color",
            "value": "{theme.color.primary.bg.active}"
          }
        },
        "focus": {
          "bg": {
            "type": "color",
            "value": "{theme.color.primary.bg.focus}"
          }
        }
      }
    }
  }
}